#!/usr/bin/env bash
#
# Author: Makarius
#
# DESCRIPTION: build and manage AFP sessions


## diagnostics

PRG="$(basename "$0")"

function usage()
{
  echo
  echo "Usage: isabelle $PRG [OPTIONS] -- [BUILD_ARGS ...]"
  echo
  echo "  Options are:"
  echo "    -A           select regular AFP sessions"
  echo "    -B           select big AFP sessions"
  echo
  echo "  Build and manage AFP sessions, as front-end for isabelle build."
  echo "  Further options and arguments after \"--\" are passed to the latter."
  echo
  exit 1
}

function fail()
{
  echo "$1" >&2
  exit 2
}


## process command line

declare -a BUILD_OPTS=(-d "$AFP_BASE/thys"
  -o browser_info -o "document=pdf" -o "document_variants=document:outline=/proof,/ML")

while getopts "AB" OPT
do
  case "$OPT" in
    A)
      BUILD_OPTS["${#BUILD_OPTS[@]}"]="-g"
      BUILD_OPTS["${#BUILD_OPTS[@]}"]="AFP"
      ;;
    B)
      BUILD_OPTS["${#BUILD_OPTS[@]}"]="-g"
      BUILD_OPTS["${#BUILD_OPTS[@]}"]="AFP_big"
      ;;
    \?)
      usage
      ;;
  esac
done

shift $(($OPTIND - 1))


## main

exec "$ISABELLE_TOOL" build "${BUILD_OPTS[@]}" "$@"

