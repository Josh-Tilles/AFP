## configurables

SESSION-NAME = Slicing
BASE-IMAGE = Jinja

## targets

default: Slicing
# usually empty:
images: $(SESSION-NAME)
test: images

all: test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

# turn image into absolute path according to ISABELLE_IMAGE_PATH or OUT
ifeq ($(ISABELLE_IMAGE_PATH),)
IMAGE=$(OUT)/$(BASE-IMAGE)
else
IMAGE=$(ISABELLE_IMAGE_PATH)$(BASE-IMAGE)
endif

USEDIR = $(ISABELLE_TOOL) usedir -v true -i true -V outline=/proof,/ML -d pdf -g true 

# time limit (in sec)
MAXTIME = 5400


## dependencies


# test run and proof document

$(SESSION-NAME): Jinja $(OUT)/$(SESSION-NAME)

Jinja:
	cd ../Jinja; $(ISABELLE_TOOL) make Jinja

$(OUT)/$(SESSION-NAME): $(OUT)/Jinja ROOT.ML Slicing.thy \
  Basic/*.thy Dynamic/*.thy StaticIntra/*.thy While/*.thy JinjaVM/*.thy \
  document/root.tex 
	ulimit -t $(MAXTIME); $(USEDIR) -b Jinja $(SESSION-NAME)



## clean

clean:
	@rm -f $(OUT)/$(SESSION-NAME)
	@rm -f $(LOG)/$(SESSION-NAME).gz
